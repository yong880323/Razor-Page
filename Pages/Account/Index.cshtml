@page
@model Razor_PagesMovie.Pages.Login.IndexModel
@{
    ViewData["Title"] = "登入";
}

<h1>@ViewData["Title"]</h1>
@if (Model.Message != null)
{
    <div class="alert alert-danger" role="alert">@Model.Message</div>
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    <div>
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    帳號:
            <input asp-for="Login.UserName" data-value="true" data-value-required="不可空白" data-value-length="限制6-12字" />
            <span asp-validation-for="Login.UserName" class="text-danger"></span>
    <br>
    密碼:
            <input asp-for="Login.Password" data-value="true" data-value-required="不可空白" data-value-length="限制6- 12字" />
            <span asp-validation-for="Login.Password" class="text-danger"></span>
    <br>
<button type="submit" class="btn btn-primary">登入</button>
            <label class="text-danger">
                <a class="btn btn-primary" asp-area="" asp-page="/Account/Create">註冊</a>
                    @Html.DisplayFor(a=>a.Message)
            </label>
    </form>
    </div>
}