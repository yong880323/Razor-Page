@page
@model Razor_PagesMovie.Pages.Account.DetailsModel

@{
    ViewData["Title"] = "會員資料修改";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
<table class="table">
    <thead>
        <tr>
            <th>姓名</th>
            <th>電子郵件</th>
        </tr>
    </thead>
    <tbody>
            @for (var i = 0; i < Model.Users.Count; i++)
            {
                <tr>
                    <input type="hidden" asp-for="@Model.Users[i].UserId" />
                    <td><input type="text" asp-for="@Model.Users[i].UserName" class="form-control" /></td>
                    <td><input type="email" asp-for="@Model.Users[i].UserEmail" class="form-control" /></td>
                </tr>
            }
    </tbody>
    </table>
    <button type="submit" class="btn btn-primary">儲存</button>
</form>

